<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kIzaExamen1.Resumen">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblUsuario" Text="" FontSize="20"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions> 
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Text="Nombre" Grid.Row="0" Grid.Column="0"/>
                <Entry x:Name="txtNombre"  Grid.Row="0" Grid.Column="1"/>
                <Label Text="Total" Grid.Row="1" Grid.Column="0"/>
                <Entry x:Name="txtTotal"  Keyboard="Numeric" Grid.Row="1" Grid.Column="1"/>

            </Grid>
            <Button x:Name="btnAcerca" Text="Acerca de" Clicked="btnAcerca_Clicked"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>